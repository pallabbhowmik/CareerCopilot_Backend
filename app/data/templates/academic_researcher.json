{
  "id": "academic_researcher",
  "name": "Academic & Research",
  "category": "Academic",
  "target_roles": ["Research Scientist", "Postdoc", "Professor", "Research Fellow"],
  "experience_levels": ["Mid", "Senior"],
  "ats_optimized": true,
  "layout": {
    "columns": 1,
    "margins": {"top": 0.75, "bottom": 0.75, "left": 0.75, "right": 0.75},
    "spacing": {"section_gap": 12, "subsection_gap": 8, "line_height": 1.15}
  },
  "fonts": {
    "primary": {
      "family": "Times New Roman",
      "sizes": {"name": 24, "section_header": 12, "subsection_header": 11, "body": 10},
      "weights": {"name": "bold", "section_header": "bold", "subsection_header": "bold", "body": "normal"}
    }
  },
  "sections": {
    "order": ["personal_info", "education", "research_interests", "experience", "publications", "skills"],
    "personal_info": {"layout": "centered", "fields": ["name", "email", "phone", "website", "scholar_profile"]},
    "education": {"label": "Education", "show_gpa": true, "show_thesis": true},
    "research_interests": {"label": "Research Interests", "format": "paragraph"},
    "experience": {
      "label": "Research Experience",
      "date_format": "MMM YYYY",
      "bullet_style": "disc",
      "highlight_keywords": ["research", "published", "grant", "methodology", "analysis", "collaboration"]
    },
    "publications": {"label": "Selected Publications", "format": "list", "show_citations": true},
    "skills": {"label": "Technical Skills", "format": "inline", "separator": " â€¢ "}
  },
  "styling": {
    "colors": {"primary": "#000000", "secondary": "#333333", "accent": "#000000"},
    "section_separator": {"type": "line", "thickness": 1, "color": "#000000"}
  }
}
