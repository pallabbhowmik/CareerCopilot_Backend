{
  "id": "data_science_ml",
  "name": "Data Science & ML Engineer",
  "category": "Data Science",
  "target_roles": ["Data Scientist", "ML Engineer", "AI Engineer", "Data Analyst"],
  "experience_levels": ["Mid", "Senior"],
  "ats_optimized": true,
  "layout": {
    "columns": 1,
    "margins": {
      "top": 0.7,
      "bottom": 0.7,
      "left": 0.7,
      "right": 0.7
    },
    "spacing": {
      "section_gap": 11,
      "subsection_gap": 7,
      "line_height": 1.1
    }
  },
  "fonts": {
    "primary": {
      "family": "Arial",
      "sizes": {
        "name": 23,
        "section_header": 12,
        "subsection_header": 10.5,
        "body": 10
      },
      "weights": {
        "name": "bold",
        "section_header": "bold",
        "subsection_header": "bold",
        "body": "normal"
      }
    }
  },
  "sections": {
    "order": ["personal_info", "summary", "technical_skills", "experience", "projects", "education", "certifications"],
    "personal_info": {
      "layout": "centered",
      "fields": ["name", "email", "phone", "linkedin", "github"]
    },
    "summary": {
      "label": "Professional Profile",
      "max_lines": 4
    },
    "technical_skills": {
      "label": "Technical Skills",
      "format": "categorized",
      "categories": ["Programming", "ML/DL Frameworks", "Data Tools", "Cloud & Big Data", "Statistics"]
    },
    "experience": {
      "label": "Professional Experience",
      "date_format": "MMM YYYY",
      "bullet_style": "disc",
      "highlight_keywords": ["Python", "TensorFlow", "PyTorch", "Scikit-learn", "SQL", "Spark", "AWS", "Azure", "model", "algorithm", "data"]
    },
    "projects": {
      "label": "Key ML Projects",
      "show_tech_stack": true,
      "bullet_style": "disc"
    },
    "education": {
      "label": "Education",
      "show_gpa": "if_above_3.5",
      "highlight_relevant_coursework": true
    },
    "certifications": {
      "label": "Certifications",
      "format": "inline"
    }
  },
  "styling": {
    "colors": {
      "primary": "#000000",
      "secondary": "#333333",
      "accent": "#000000"
    },
    "section_separator": {
      "type": "line",
      "thickness": 1,
      "color": "#000000"
    }
  }
}
