{
  "id": "ux_ui_designer",
  "name": "UX/UI Designer",
  "category": "Design",
  "target_roles": ["UX Designer", "UI Designer", "Product Designer", "Visual Designer"],
  "experience_levels": ["Fresher", "Mid", "Senior"],
  "ats_optimized": true,
  "layout": {
    "columns": 1,
    "margins": {"top": 0.75, "bottom": 0.75, "left": 0.75, "right": 0.75},
    "spacing": {"section_gap": 12, "subsection_gap": 8, "line_height": 1.15}
  },
  "fonts": {
    "primary": {
      "family": "Helvetica",
      "sizes": {"name": 24, "section_header": 12, "subsection_header": 11, "body": 10},
      "weights": {"name": "bold", "section_header": "bold", "subsection_header": "bold", "body": "normal"}
    }
  },
  "sections": {
    "order": ["personal_info", "summary", "experience", "skills", "education"],
    "personal_info": {"layout": "centered", "fields": ["name", "email", "phone", "portfolio", "linkedin", "behance"]},
    "summary": {"label": "Design Philosophy", "max_lines": 3},
    "experience": {
      "label": "Professional Experience",
      "date_format": "MMM YYYY",
      "bullet_style": "disc",
      "highlight_keywords": ["designed", "user research", "wireframe", "prototype", "usability", "interface", "user experience", "Figma", "Sketch"]
    },
    "skills": {
      "label": "Design Skills & Tools",
      "format": "categorized",
      "categories": ["Design Tools", "Research Methods", "Prototyping", "Other Skills"]
    },
    "education": {"label": "Education", "show_gpa": "optional"}
  },
  "styling": {
    "colors": {"primary": "#000000", "secondary": "#444444", "accent": "#0066cc"},
    "section_separator": {"type": "line", "thickness": 0.5, "color": "#cccccc"}
  }
}
